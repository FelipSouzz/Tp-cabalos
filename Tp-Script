-- === Minimize / Restore seguro ===

-- função utilitária para obter referências (caso nomes diferentes)
local function getTeleportFrame()
	if Frame and Frame:IsA("GuiObject") then return Frame end
	local tg = Player:FindFirstChild("PlayerGui") and Player.PlayerGui:FindFirstChild("TeleportGUI")
	if tg then return tg:FindFirstChild("TPFrame") end
	return nil
end

local function getFlyFrame()
	if Fly_Frame and Fly_Frame:IsA("GuiObject") then return Fly_Frame end
	local fg = Player:FindFirstChild("PlayerGui") and Player.PlayerGui:FindFirstChild("FlyGUI")
	if fg then
		for _,c in ipairs(fg:GetChildren()) do
			if c:IsA("GuiObject") then return c end
		end
	end
	return nil
end

local TeleportFrameRef = getTeleportFrame()
local FlyFrameRef = getFlyFrame()

local existingRestore = Player.PlayerGui:FindFirstChild("RestoreGUI")
if existingRestore then
	RestoreGui = existingRestore
	RestoreBtn = RestoreGui:FindFirstChildWhichIsA("TextButton")
else
	local RestoreGui = Instance.new("ScreenGui")
	RestoreGui.Name = "RestoreGUI"
	RestoreGui.ResetOnSpawn = false
	RestoreGui.Parent = Player:WaitForChild("PlayerGui")
	RestoreGui.DisplayOrder = 1000

	local RestoreBtn = Instance.new("TextButton")
	RestoreBtn.Name = "RestoreBtn"
	RestoreBtn.Size = UDim2.new(0, 52, 0, 52)
	RestoreBtn.AnchorPoint = Vector2.new(0, 1)
	RestoreBtn.Position = UDim2.new(0, 10, 1, -10)
	RestoreBtn.Text = "O"
	RestoreBtn.Font = Enum.Font.SourceSansBold
	RestoreBtn.TextSize = 28
	RestoreBtn.BackgroundColor3 = Color3.fromRGB(120, 200, 120)
	RestoreBtn.AutoButtonColor = true
	RestoreBtn.Parent = RestoreGui

	local corner = Instance.new("UICorner", RestoreBtn)
	RestoreBtn.Visible = false

	_G.__RestoreGui = RestoreGui
	_G.__RestoreBtn = RestoreBtn
end

local RestoreGui = _G.__RestoreGui or Player.PlayerGui:FindFirstChild("RestoreGUI")
local RestoreBtn = _G.__RestoreBtn or (RestoreGui and RestoreGui:FindFirstChild("RestoreBtn"))

local function refreshRefs()
	TeleportFrameRef = getTeleportFrame()
	FlyFrameRef = getFlyFrame()
	RestoreGui = Player.PlayerGui:FindFirstChild("RestoreGUI")
	RestoreBtn = RestoreGui and RestoreGui:FindFirstChild("RestoreBtn")
end
refreshRefs()

local function updateRestoreButtonVisibility()
	refreshRefs()
	local tpVisible = TeleportFrameRef and TeleportFrameRef.Visible
	local flyVisible = FlyFrameRef and FlyFrameRef.Visible
	if RestoreBtn then
		RestoreBtn.Visible = not (tpVisible or flyVisible)
	end
end

local function minimizeBoth()
	refreshRefs()
	if TeleportFrameRef then TeleportFrameRef.Visible = false end
	if FlyFrameRef then FlyFrameRef.Visible = false end
	if RestoreBtn then RestoreBtn.Visible = true end
end

local function restoreBoth()
	refreshRefs()
	if TeleportFrameRef then TeleportFrameRef.Visible = true end
	if FlyFrameRef then FlyFrameRef.Visible = true end
	if RestoreBtn then RestoreBtn.Visible = false end
end

if CloseButton then
	CloseButton.MouseButton1Click:Connect(function()
		minimizeBoth()
	end)
end

if RestoreBtn then
	RestoreBtn.MouseButton1Click:Connect(function()
		restoreBoth()
	end)
end

local function attachVisibleWatcher(obj)
	if not obj or not obj.GetPropertyChangedSignal then return end
	local conn = obj:GetPropertyChangedSignal("Visible"):Connect(function()
		updateRestoreButtonVisibility()
	end)
	table.insert(connections, conn)
end

attachVisibleWatcher(TeleportFrameRef)
attachVisibleWatcher(FlyFrameRef)

safeConnect(RunService.Heartbeat, function()
	if not TeleportFrameRef or not FlyFrameRef or not RestoreBtn then
		refreshRefs()
		attachVisibleWatcher(TeleportFrameRef)
		attachVisibleWatcher(FlyFrameRef)
	end
	updateRestoreButtonVisibility()
end)

-- === Botões principais (Teleport) ===
TeleportButton.MouseButton1Click:Connect(teleportToNextModel)
RefreshButton.MouseButton1Click:Connect(refreshHorseList)

-- Inicializa lista de cavalos
refreshHorseList()
